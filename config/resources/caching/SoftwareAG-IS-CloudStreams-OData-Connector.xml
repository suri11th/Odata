<ehcache name="SoftwareAG.IS.CloudStreams.OData.Connector" updateCheck="false">
    <defaultCache
            maxElementsInMemory="0"
            eternal="false"
            overflowToDisk="false"/>
    <cache         
        name="ODataConnectorsCache"         
        eternal="false"         
	maxEntriesLocalHeap="1000"
	timeToLiveSeconds="43200">
        <persistence             
            strategy="none"/>        
        <terracotta             
            clustered="false"             
            consistency="STRONG">            
            <nonstop                 
                enabled="false"                 
                immediateTimeout="true"                 
                timeoutMillis="5000"/>        
        </terracotta>    
    </cache>    
</ehcache>
